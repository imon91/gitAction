<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SmokeTestSuite">
    <listeners>
        <listener class-name="listeners.RedXUiTestNgListener"></listener>
    </listeners>
    <test name="SmokeTests" preserve-order="true" parallel="false">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.redx.tests.Authentication"></class>
            <class name="com.redx.tests.ShopName"></class>
            <class name="com.redx.tests.ChangeLanguage"></class>
            <class name="com.redx.tests.CreateParcel"></class>
            <class name="com.redx.tests.EditParcel"></class>
            <class name="com.redx.tests.DeleteParcel"></class>
            <class name="com.redx.tests.ParcelDetails"></class>
            <class name="com.redx.tests.PaymentInvoice"></class>
            <class name="com.redx.tests.Settings"></class>
            <class name="com.redx.tests.Logout"></class>
        </classes>
    </test>
</suite>
